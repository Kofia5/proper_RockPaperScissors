<!DOCTYPE html>
<html>

<head>
  
  <title>RPS<%= yield :title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery.tablesorter.min' %>
  <%= csrf_meta_tag %>

  <!--Setup tables w/tablesorter-->
  <script type="text/javascript" id="js">
    $(document).ready(function() {
    $("#usersTable").tablesorter({
    sortList: [[4,1],[0,1]] 
    });
    $("#gamesTable").tablesorter({
    sortList: [[5,1]] 
    });
    $("#roundsTable").tablesorter();
    });
  </script>

</head>

<body>
  <header>
    <%= render "shared/header" %>
  </header>

  <div id="notice">
    <p><%= notice %></p>
  </div>

  <div class="sidebar">
    <%= render "shared/sidebar" %>
  </div>
  
   <div>
     <%= yield %>
   </div>

   <footer>
     <%= render "shared/footer" %>
   </footer>

</body>

</html>
