<h2>
  Listing <%= @user ? (link_to  @user.username, @user)+"'s" : '' %> 
  <%= @header_option %>
</h2>

<table id="gamesTable" class="tablesorter">
  <thead>
    <tr>
      <th>Winner</th>
      <th>Player 1</th>
      <th>Player 2</th>
      <th>Best of</th>
	  <th>Rounds Played</th>
      <th>Game Played at</th>
      <% if @current_user %>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
    <% winner = Stats.find(game.winner).user %>
    <% player1 = Stats.find(game.player1).user %>
    <% player2 = Stats.find(game.player2).user %>
    <tr>
      <td><%= link_to winner.username, winner  %></td>
      <td><%= link_to player1.username, player1 %></td>
      <td><%= link_to player2.username, player2 %></td>
      <td><%= game.total_rounds %></td>
	  <td><%= game.rounds_played %></td>	
      <td><%= link_to game.updated_at, game %></td>
      <% if @current_user %>
      <td><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
